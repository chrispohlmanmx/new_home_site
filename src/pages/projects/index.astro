---
import "../../styles/global.css";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, getEntries } from "astro:content";
const finishedProjects = await getCollection("projects", ({ data }) => {
    return data.isFinished === true;
});

const largeProjects = finishedProjects.filter(
    (project) => project.data.isLargeProject === true
);
const smallProjects = finishedProjects.filter(
    (project) => project.data.isLargeProject !== true
);
const pageTitle = "Chrispy Project Menu";
---

<BaseLayout pageTitle={pageTitle}>
    <section class="small-projects-section">
        <h2>Small Bites</h2>
        <ul>
            {
                smallProjects.map((project) => (
                    <li>
                        <a href={`/projects/${project.slug}`}>
                            {project.data.name}
                        </a>
                    </li>
                ))
            }
        </ul>
    </section>
    <section class="large-projects-section">
        <h2>Main Entrees</h2>
        <ul>
            {
                largeProjects.map((project) => (
                    <li>
                        <a href={`/projects/${project.slug}`}>
                            {project.data.name}
                        </a>
                    </li>
                ))
            }
        </ul>
    </section>
    <section class="build-your-own">
        <h2>Build your own</h2>
        <div>
            <h3>Backend Technologies</h3>
            <ul>
                <li>Python</li>
                <li>Perl</li>
                <li>C#</li>
                <li>Java</li>
                <li>SQL</li>
                <li>Bash</li>
                <li>Flask</li>
            </ul>
        </div>
        <div>
            <h3>Frontend Technologies</h3>
            <ul>
                <li>Javascript</li>
                <li>HTML</li>
                <li>CSS</li>
                <li>Bootstrap</li>
                <li>Vue</li>
                <li>React</li>
                <li>JQuery</li>
            </ul>
        </div>
        <div>
            <h3>Everything Else</h3>
            <ul>
                <li>Astro</li>
                <li>Django</li>
                <li>Vercel</li>
                <li>S3</li>
                <li>Netlify</li>
                <li>Git</li>
                <li>GitLab</li>
                <li>Github</li>
            </ul>
        </div>
    </section>
</BaseLayout>
