---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.name}>
    <p><em>{frontmatter.description}</em></p>

    <div class="contributors">
        Project created by:
        {
            frontmatter.contributors.map((contributor: any) => (
                <div class="contributor">
                    <a href={contributor.url}>{contributor.name}</a>{" "}
                </div>
            ))
        }
    </div>

    <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />

    <div class="project-links">
        <a href={frontmatter.url} class="project-url"
            >{frontmatter.name} Website</a
        >
        <a href={frontmatter.repo.url} class="repo-link"
            >View source code on {frontmatter.repo.platform}</a
        >
    </div>

    <p>Main technologies and languages used:</p>
    <div class="languages">
        {
            frontmatter.languages.map((language: string) => (
                <div class="language">{language}</div>
            ))
        }
    </div>

    <p>Other technologies used:</p>
    <div class="other-techs">
        {
            frontmatter.otherTechUsed.map((tech: string) => (
                <div class="tech">{tech}</div>
            ))
        }
    </div>

    <slot />
</BaseLayout>
<style>
    a {
        color: #00539f;
    }

    .languages,
    .other-techs {
        display: flex;
        flex-wrap: wrap;
    }

    .language,
    .tech {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        font-size: 1.15em;
        background-color: #f8fcfd;
    }
</style>
